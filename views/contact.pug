block content
  - var namespace = "contact";

  section.fade-in
    .social-grid
      a.social-link(href="https://github.com/jaswen12", target="_blank")
        i.fab.fa-github
        span GitHub

      a.social-link(href="https://www.linkedin.com/in/jasper-wen/", target="_blank")
        i.fab.fa-linkedin
        span LinkedIn

      a.social-link(href="https://line.me/ti/p/jfI036I-TR", target="_blank")
        i.fab.fa-line
        span Line

  section.fade-in.contact-section
