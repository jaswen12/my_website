extends layout

block content

  //- Featured Project Section
  if featured
    section.featured.project.fade-up
      h2.fade-up Featured Projects
      if featured.image
        img.project-image(src=featured.image, alt=featured.title)
      h3= featured.title
      p.fade-up= featured.description
      a.button(href=featured.link, target="_blank") View Project

  //- Home Intro Section
  section.fade-up.home-intro
